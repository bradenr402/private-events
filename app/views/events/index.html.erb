<%= render 'nav' %>
<% if user_signed_in? %>
  <h1>Hello, <%= current_user.name %>!</h1>
<% else %>
  <h1>Welcome!</h1>
<% end %>
<h3>Upcoming Events</h3>
<ul>
  <% @events.upcoming.each do |event| %>
    <li>
      <%= link_to event.title, event %> — <%= event.datetime.strftime('%a, %b %e @ %l:%M %p') %>
      <div>created by <%= event.creator.name %></div><br />
    </li>
  <% end %>
</ul>

<h3>Past Events</h3>
<ul>
  <% @events.past.each do |event| %>
    <li>
      <%= link_to event.title, event %> — <%= event.datetime.strftime('%a, %b %e @ %l:%M %p') %>
      <div>created by <%= event.creator.name %></div><br />
    </li>
  <% end %>
</ul>
